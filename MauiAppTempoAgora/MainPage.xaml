<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiAppTempoAgora.MainPage">

    <ScrollView>
        <StackLayout Spacing="10" Margin="10">
            <Button Text="Obter localizaão" Clicked="Button_Clicked" />

            <Label Text="Latitude:" />
            <Entry x:Name="lbl_latitude" Text="" />

            <Label Text="Longitude:" />
            <Entry x:Name="lbl_longitude" Text="" />

            <Button Text="Obter Placemark" Clicked="Button_Clicked_1" />

            <Label x:Name="lbl_reverso" Text="Dados gerais locais" />

            <Button Text="Obter Previsão do tempo" Clicked="Button_Clicked_2" />

            <Label x:Name="lbl_previsao" />
        </StackLayout>
    </ScrollView>

</ContentPage>